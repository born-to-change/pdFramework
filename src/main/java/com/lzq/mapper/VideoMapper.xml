<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzq.mapper.VideoMapper">
    <resultMap id="Video" type="com.lzq.pojo.Video">
        <result property="videoId" column="video_id"/>
        <result property="videoUrl" column="video_url"/>
        <result property="videoImage" column="video_image"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="bingingCameraId" column="binging_camera_id"/>
    </resultMap>
    <insert id="createVideo" parameterType="Video">
        INSERT INTO video
        (videoUrl,videoImage,startTime,endTime,bingingCameraId) VALUES
        (#{video_url},#{video_image},#{start_time},#{end_time},#{binging_camera_id})
    </insert>

    <select id="getVideoByCameraId" parameterType="Integer" resultMap="Video">
        SELECT * FROM video
        WHERE camera_id = #{videoId}
    </select>

    <delete id="deleteVideo" parameterType="Integer">
        delete from video
        where video_id = #{videoId}
    </delete>

    <update id="updateVideo" parameterType="Cam">
        UPDATE user
        set video_url = #{videoImage},
        video_url = #{videoUrl},
        video_image = #{videoImage},
        start_time = #{startTime},
        end_time = #{endTime},
        binging_camera_id = #{bingingCameraId}
        WHERE video_id = #{videoId},
    </update>
</mapper>